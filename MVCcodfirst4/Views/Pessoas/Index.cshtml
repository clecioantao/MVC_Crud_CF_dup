@model IEnumerable<MVCcodfirst4.Models.Pessoa>

@{
    ViewBag.Title = "Pessoas";
}

<p></p>

<div class="well">

    <div class="alert alert-success" role="alert">Pessoas</div>

    <p>
        <button type="button" class="btn btn-primary">@Html.ActionLink("Create New", "Create") </button>
    </p>
    <table class="table table-dark">

        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Cidade.NomeCidade)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Estado.NomeEstado)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NomePessoa)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EnderecoPessoa)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ComplementoPessoa)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
            {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Cidade.NomeCidade)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Estado.NomeEstado)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NomePessoa)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EnderecoPessoa)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ComplementoPessoa)
                </td>
                <td>
                    <div class="btn-group" role="group" aria-label="...">
                        <button type="button" class="btn btn-primary">@Html.ActionLink("Edit", "Edit", new { id = item.PessoaId })</button>
                        <button type="button" class="btn btn-primary">@Html.ActionLink("Details", "Details", new { id = item.PessoaId })</button>
                        <button type="button" class="btn btn-primary">@Html.ActionLink("Delete", "Delete", new { id = item.PessoaId })</button>
                </div>

                </td>
            </tr>
        }

    </table>
</div>